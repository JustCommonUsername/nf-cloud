{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "title": "Workflow",
  "description": "NF-Cloud workflow definition",
  "properties": {
    "directory": {
      "description": "Workflow directory",
      "type": "string"
    },
    "script": {
      "description": "Nextflow main script",
      "type": "string"
    },
    "args": {
      "description": "Nextflow arguments",
      "type": "object",
      "properties": {
        "dynamic": {
          "description": "Nextflow parameters which can be adjusted by the user and will be rendered",
          "type": "object",
          "properties": {
            "inFile": {
              "description": "Path to file or folder",
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "desc": {
                  "type": "string"
                },
                "selectable_files": {
                  "type": "boolean"
                },
                "selectable_folders": {
                  "type": "boolean"
                }
              },
              "required": [
                "type",
                "desc",
                "selectable_files",
                "selectable_folders"
              ]
            },
            "inFolder": {
              "description": "Path to file or folder",
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "desc": {
                  "type": "string"
                },
                "selectable_files": {
                  "type": "boolean"
                },
                "selectable_folders": {
                  "type": "boolean"
                }
              },
              "required": [
                "type",
                "desc",
                "selectable_files",
                "selectable_folders"
              ]
            },
            "inFiles": {
              "description": "Path to file or folder",
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "desc": {
                  "type": "string"
                },
                "selectable_files": {
                  "type": "boolean"
                },
                "selectable_folders": {
                  "type": "boolean"
                }
              },
              "required": [
                "type",
                "desc",
                "selectable_files",
                "selectable_folders"
              ]
            },
            "inFolders": {
              "description": "Path to file or folder",
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "desc": {
                  "type": "string"
                },
                "selectable_files": {
                  "type": "boolean"
                },
                "selectable_folders": {
                  "type": "boolean"
                }
              },
              "required": [
                "type",
                "desc",
                "selectable_files",
                "selectable_folders"
              ]
            },
            "txtFiles": {
              "description": "Path to file or folder",
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "desc": {
                  "type": "string"
                }
              },
              "required": [
                "type",
                "desc"
              ]
            },
            "numberOfNewlines": {
              "description": "Path to file or folder",
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "desc": {
                  "type": "string"
                }
              },
              "required": [
                "type",
                "desc"
              ]
            },
            "singleLineText": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "desc": {
                  "type": "string"
                }
              },
              "required": [
                "type",
                "desc"
              ]
            },
            "multilineText": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "desc": {
                  "type": "string"
                },
                "is_multiline": {
                  "type": "boolean"
                }
              },
              "required": [
                "type",
                "desc",
                "is_multiline"
              ]
            },
            "static": {
              "type": "object",
              "properties": {
                "outDir": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string"
                    },
                    "value": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "type",
                    "value"
                  ]
                }
              },
              "required": [
                "outDir"
              ]
            }
          }
        }
      }
    }
  },
  "required": [
    "directory",
    "script",
    "args"
  ]
}