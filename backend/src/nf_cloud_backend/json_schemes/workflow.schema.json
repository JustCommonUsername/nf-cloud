{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "title": "Workflow",
  "description": "NF-Cloud workflow definition",
  "properties": {
    "directory": {
      "description": "Workflow directory",
      "type": "string"
    },
    "script": {
      "description": "Nextflow main script",
      "type": "string"
    },
    "nextflow_parameters": {
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "name": {
                "description": "Nextflow parameter like `-with-docker`",
                "type": "string"
              },
              "value": {}
            },
            "required": [
              "name",
              "value"
            ]
          }
        ]
      }
    },
    "args": {
      "description": "Nextflow arguments",
      "type": "object",
      "properties": {
        "dynamic": {
          "description": "Nextflow parameters which can be adjusted by the user and will be rendered",
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "path" 
                  },
                  "name": {
                    "type": "string"
                  },
                  "label": {
                    "description": "Human readable label",
                    "type": "string"
                  },
                  "desc": {
                    "type": "string"
                  },
                  "selectable_files": {
                    "description": "If true files are selectable.",
                    "type": "boolean"
                  },
                  "selectable_folders": {
                    "description": "If true folders are selectable.",
                    "type": "boolean"
                  }
                },
                "required": [
                  "type",
                  "name",
                  "label",
                  "desc"
                ]
              },
              {
                "description": "Paths to files or folders, will be returned as comma-separated list",
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "paths" 
                  },
                  "name": {
                    "type": "string"
                  },
                  "label": {
                    "description": "Human readable label",
                    "type": "string"
                  },
                  "desc": {
                    "type": "string"
                  },
                  "selectable_files": {
                    "description": "If true files are selectable.",
                    "type": "boolean"
                  },
                  "selectable_folders": {
                    "description": "If true folders are selectable.",
                    "type": "boolean"
                  }
                },
                "required": [
                  "type",
                  "name",
                  "label",
                  "desc"
                ]
              },
              {
                "description": "Number input.",
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "file-glob" 
                  },
                  "name": {
                    "type": "string"
                  },
                  "label": {
                    "description": "Human readable label",
                    "type": "string"
                  },
                  "desc": {
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "name",
                  "label",
                  "desc"
                ]
              },
              {
                "description": "Number input.",
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "number" 
                  },
                  "name": {
                    "type": "string"
                  },
                  "label": {
                    "description": "Human readable label",
                    "type": "string"
                  },
                  "desc": {
                    "type": "string"
                  }
                },
                "required": [
                  "type",
                  "name",
                  "label",
                  "desc"
                ]
              },
              {
                "description": "Text input",
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "text" 
                  },
                  "name": {
                    "type": "string"
                  },
                  "label": {
                    "description": "Human readable label",
                    "type": "string"
                  },
                  "desc": {
                    "type": "string"
                  },
                  "is_multiline": {
                    "description": "If true, the input is multiline.",
                    "type": "boolean"
                  }
                },
                "required": [
                  "type",
                  "name",
                  "label",
                  "desc"
                ]
              },
              {
                "description": "Value select",
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "value-select" 
                  },
                  "name": {
                    "type": "string"
                  },
                  "label": {
                    "description": "Human readable label",
                    "type": "string"
                  },
                  "desc": {
                    "type": "string"
                  },
                  "options": {
                    "type": "array",
                    "items": {
                      "oneOf": [
                        {
                          "type": "object",
                          "properties": {
                            "label": {
                              "type": "string"
                            },
                            "value": {}
                          },
                          "required": [
                            "label",
                            "value"
                          ]
                        }
                      ]
                    }
                  }
                },
                "required": [
                  "type",
                  "name",
                  "label",
                  "desc",
                  "options"
                ]
              }
            ]
          }
        },
        "static": {
          "description": "Nextflow parameters which are defined by the server.",
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "value": {}
                },
                "required": [
                  "name",
                  "value"
                ]
              }
            ]
          }
        }
      },
      "required": [
        "dynamic",
        "static"
      ]
    },
    "results": {
      "description": "Result displaying",
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "images" 
              },
              "header": {
                "description": "Header of the result section",
                "type": "string"
              },
              "images": {
                "description": "List of images and descriptions",
                "type": "array",
                "items": {
                  "oneOf": [
                    {
                      "type": "object",
                      "properties": {
                        "path": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        }
                      },
                      "required": [
                        "path",
                        "description"
                      ]
                    }
                  ]
                }
              }
            },
            "required": [
              "type",
              "header",
              "images"
            ]
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "pdf" 
              },
              "path": {
                "description": "PDF path",
                "type": "string"
              },
              "header": {
                "description": "Header of the result section",
                "type": "string"
              },
              "description": {
                "description": "Description",
                "type": "string"
              }
            },
            "required": [
              "type",
              "path",
              "header",
              "description"
            ]
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "svg" 
              },
              "path": {
                "description": "SVG path",
                "type": "string"
              },
              "header": {
                "description": "Header of the result section",
                "type": "string"
              },
              "description": {
                "description": "Description",
                "type": "string"
              }
            },
            "required": [
              "type",
              "path",
              "header",
              "description"
            ]
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "plotly" 
              },
              "path": {
                "description": "Plotly.json path",
                "type": "string"
              },
              "header": {
                "description": "Header of the result section",
                "type": "string"
              },
              "description": {
                "description": "Description",
                "type": "string"
              }
            },
            "required": [
              "type",
              "path",
              "header",
              "description"
            ]
          }
        ]
      }
    }
  },
  "required": [
    "directory",
    "script",
    "nextflow_parameters",
    "args",
    "results"
  ]
}